
 #include <iostream>
 #include<math.h>
 
using namespace std;

  int main()
    {
        
        int  a,b;
         int max;
         int min;
          
         
         // finding  maximum between number
        cout<<"enter the first number"<<endl;
        cin>>a;
        cout<<"enter the second number"<<endl;
        cin>>b;
        max=(((a+b)+abs(a - b))/2);
        min=(((a+b)- abs(a - b))/2);
        cout<<"maximum"<<max<<endl;
        cout<<"minmum"<<min;
        
        
        
       
        
        
        return 0;
        
    }
    
